# PlateVision Backend Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For Railway MySQL:
# DATABASE_URL=mysql+pymysql://root:PASSWORD@HOST:PORT/platevision
# 
# For local MySQL:
# DATABASE_URL=mysql+pymysql://app:root@localhost:3306/platevision
#
# For SQLite (development/demo):
# DATABASE_URL=sqlite:///./platevision.db

DATABASE_URL=mysql+pymysql://app:root@localhost:3306/platevision

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=uploads
DETECTION_DIR=detections

# ===========================================
# CAMERA SETTINGS (for live camera feature)
# ===========================================
CAMERA_INDEX=0
DETECTION_INTERVAL_MS=500

# ===========================================
# YOLO MODEL PATH (relative to backend folder)
# ===========================================
MODEL_PATH=best.pt
